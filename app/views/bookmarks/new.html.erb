<h1>Add Recipe to <%= @category.name %></h1>

<%= simple_form_for [@category, @bookmark], url: category_bookmarks_path(@category), local: true do |f| %>
  <% if @bookmark.errors.any? %>
    <div>
      <h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>
      <ul>
        <% @bookmark.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.association :recipe, collection: Recipe.all, label: "Select a Recipe", prompt: "Choose a recipe" %>
  </div>

  <div>
    <%= f.input :comment, as: :text, label: "Comment (optional)" %>
  </div>

  <div>
    <%= f.hidden_field :redirect_to, value: category_path(@category) %>
    <%= f.button :submit, "Add Recipe to Category" %>
  </div>
<% end %>

<%= link_to 'Back to Category', @category %>
