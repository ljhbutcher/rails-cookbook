<h1>List of Categories</h1>

<div class="cards">
  <% @categories.each do |category| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= category.image_url %>)">
    <%= link_to category.name, category_path(category) %>
    </div>
  <% end %>
</div>
